@model Patents.Models.ViewModels.LoginModel
@{ 
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    <hr />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(x => x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Password)
        @Html.EditorFor(x => x.Password)
    </div>
    <div>
        <h3>Manager @Html.CheckBoxFor(model => model.Manager)</h3>
    </div>
    <div>
        <button type="submit" class="btn btn-primary login-button">Log in</button>
        <a href="@Url.Action("Register", "Account")"> Register </a>
    </div>

}
