@model Patents.Models.ViewModels.LoginModel
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
@using (Html.BeginForm())
{
    <hr />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.EditorFor(x => x.Name, "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Password, new { @class = "control-label" })
        @Html.EditorFor(x => x.Password, new { @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(model => model.Manager, new { @class = "control-label" })
        @Html.CheckBoxFor(model => model.Manager)
    </div>
    <div>
        <button type="submit" class="btn btn-primary login-button">Log in</button>
        @Html.ActionLink("Register", "Register", "Account", new { @class = "btn btn-primary login-button" })
    </div>

}
