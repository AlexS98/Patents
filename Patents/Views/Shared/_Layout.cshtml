<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        @Html.ActionLink("PATENTS OFFICE", "Index", "Home", null, new { @class = "navbar-brand" })
        @if (ViewBag.UserName != "")
        {
            @Html.ActionLink("Log out", "Logout", "Account", null, new { @class = "btn btn-info pull-right btn-sm col-sm-1" })
            <p class="btn btn-success pull-right btn-sm col-sm-1">Hello, @(ViewBag.UserName != "" ? ViewBag.UserName : "Unregistred user")</p>
        }
        else
        {
            @Html.ActionLink("Registration", "Register", "Account", null, new { @class = "btn btn-info pull-right btn-lg col-sm-1" })
            @Html.ActionLink("Log in", "Login", "Account", null, new { @class = "btn btn-info pull-right btn-lg col-sm-1" })
        }
    </div>
    <div class="row panel">
        <div id="categories" class="col-xs-3">
            <h3 class="text-center">ACTONS</h3>
            <hr />
            @Html.ActionLink("Apply for a patent", "", "", null, new { @class = "btn btn-success btn-block btn-lg" })
            @Html.ActionLink("My meetings", "UserMeetings", "Meetings", null, new { @class = "btn btn-success btn-block btn-lg" })
            @Html.ActionLink("My patents", "UserPatents", "Patents", null, new { @class = "btn btn-success btn-block btn-lg" })
            @Html.ActionLink("All patents", "", "", null, new { @class = "btn btn-success btn-block btn-lg" })

            <h2 class="text-center">TO DELETE</h2>
            <hr />
            @Html.ActionLink("Inventors", "ShowAllData", "Inventors", null, new { @class = "btn-block" })
            <hr />
            @Html.ActionLink("Registers", "ShowAllData", "Registers", null, new { @class = "btn-block" })
            <hr />
            @Html.ActionLink("Patents", "ShowAllData", "Patents", null, new { @class = "btn-block" })
            <hr />
            @Html.ActionLink("Meetings", "ShowAllData", "Meetings", null, new { @class = "btn-block" })
            <hr />
            @Html.ActionLink("Managers", "Index", "Admin", null, new { @class = "btn-block" })
            <hr />
        </div>
        <div class="col-xs-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
